# Maintainer: Charles Dong <chardon_cs@proton.me>

pkgname=deno-bin
pkgver=2.0.3
pkgrel=1
pkgdesc="Startup AUR providing the latest deno runtime, then you can upgrade deno using \`deno upgrade\`"
arch=('aarch64')
url="https://deno.com"
license=(MIT)
provides=(deno)
conflicts=(deno)

_target=deno-$CARCH-unknown-linux-gnu
_baseurl="https://github.com/denoland/deno/releases/download/v$pkgver"
source=(
    $_baseurl/${_target}.zip
)
sha256sums=(
    "3a7c6b8e9cfc95881c1c0f6a2a11fcf994d00d0332cbac2e6dbe99e18ab18341"
)

check() {
    cd $srcdir
}

package() {
    install -Dm755 "$srcdir/deno" "$pkgdir/usr/bin/deno"
}
