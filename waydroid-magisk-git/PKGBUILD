pkgname=waydroid-magisk-git
_pkgname=waydroid-magisk
pkgver=v1.2.4.r48.g4f1001b
pkgrel=1
pkgdesc="Magisk Delta manager for Waydroid"
arch=('any')
url="https://github.com/nitanmarcel/waydroid-magisk"
license=('GPL3')
depends=(
    'waydroid'
    'python'
    'dbus-python'
)
makedepends=('git')
source=("${_pkgname}"::"git+https://github.com/nitanmarcel/waydroid-magisk.git")
sha256sums=('SKIP')

pkgver() {
  cd "$_pkgname"
  git describe --long --abbrev=7 | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

package () {
    cd "$srcdir/$_pkgname"
    make install USE_SYSTEMD=1 DESTDIR="${pkgdir}"
}
